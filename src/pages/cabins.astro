---
import CabinCard from '../components/CabinCard.astro'
import Layout from '../layouts/Layout.astro'
import cabinList from '../services/data'
---

<Layout title='Cabañas'>
  <div class='flex flex-col justify-center items-center'>
    <h3
      class='text-4xl md:text-5xl pt-10 pb-6 font-bold bg-gradient-to-r from-primaryText to-secondatyText text-transparent bg-clip-text'
    >
      Todas nuestras Cabañas
    </h3>
    <p></p>
    <div class='grid gap-10 mt-10 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4'>
      {
        cabinList.map((item, index) => (
          <CabinCard
            id={index}
            name={item.name}
            rooms={item.rooms}
            price={item.price}
            imageUrl={item.url}
          />
        ))
      }
    </div>
  </div>
</Layout>
